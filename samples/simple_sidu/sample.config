#yuki log
ylog: {
    log_dir = "./log/";
    log_file = "yuki_test.log";

    # max log level.
    # the level higher than this level will not be logged.
    # optional. default is 32.
    # DEBUG = 32
    # TRACE = 16
    # NOTICE = 8
    # WARNING = 4
    # FATAL = 1
    # CRITICAL = 0
    max_level = 16; # disable debug logging
    max_line_length = 1024; # optional. default is 1024
};

#yuki table
ytable: {
    tables: ({
        name = "mysample";
        connection = "162";
    }, {
        name = "keyhash_sample";
        hash_key = "uid";
        hash_method = "key_hash";
        connection = "162";
    });

    connections: ({
        name = "162";
        host = "127.0.0.1";
        user = "test";
        password = "test";
        database = "test"; # optional.
        character_set = "utf8"; # optional. highly recommend to set one.
        port = 3306; # optional. default is 3306.
    });
};
